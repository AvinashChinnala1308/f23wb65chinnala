extends layout

block content
  h1= title
  p Rows: #{query.rows}, Columns: #{query.cols}
  - var rows=Number(query.rows);
  - var cols=Number(query.cols);
  if !Number.isInteger(rows)
      p  Input is Invalid. NAN
  else if !Number.isInteger(cols)
      p  Input is Invalid.NAN
  else if rows<1||rows>10
      p  Input is Invalid. enter between 1 to 10
  else if cols<1||cols>10
      p  Input is Invalid. enter between 1 to 10
  else
    table#outer
      - for (let a = 0; a < rows; a++)
        tr#middle
          - for (let b = 0; b < cols; b++)
            - if (a == b)
              td= 1
            - else if (a == b + 1)
              td= 2
            - else if (a == b - 1)
              td= a
            - else
              td= 0